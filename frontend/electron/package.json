{
  "name": "ttl-rl-electron",
  "version": "1.0.0",
  "description": "TikTok Live to Rocket League Gift Key Mapper",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "npm run build --prefix .. && electron-builder",
    "build-only": "electron-builder",
    "dist": "npm run build"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.ttlrl.tiktok-gift-mapper",
    "productName": "TikTok Gift Key Mapper",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "../dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!node_modules/.cache/**"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "TrevorWade",
        "repo": "TTLxRL"
      }
    ],
    "artifactName": "TTLxRL-${version}-Setup.${ext}"
  }
}
